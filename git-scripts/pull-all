#!/bin/bash

cd $( dirname ${0} )
for FOLDER in $( find ${PWD} -maxdepth 1 -type d -not -path ${PWD} ); do
	if [[ -e "${FOLDER}/.git" ]]; then
		cd ${FOLDER} || continue
		OUTPUT=$( git pull 2>&1 )
		grep -qP '^(Current branch [-[:alnum:]]+ is)|(Already) up[ -]to[ -]date.$' <<<"${OUTPUT}" && continue
		pwd
		echo "${OUTPUT}" | awk '{ print "\t"$0; }'
	else
		continue
	fi
done
